<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/row_booking_request_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    android:orientation="vertical"
    card_view:cardCornerRadius="3dp"
    card_view:cardElevation="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <TextView
            android:id="@+id/row_booking_requests_hotel_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:text="Hotel Name"
            android:textColor="@android:color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/row_booking_requests_seperator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:text="---"
            android:textColor="@android:color/black"
            app:layout_constraintStart_toEndOf="@+id/row_booking_requests_hotel_name"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/row_booking_requests_city_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:text="City Name"
            android:textColor="@android:color/black"
            app:layout_constraintStart_toEndOf="@+id/row_booking_requests_seperator"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/row_booking_requests_room_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:text="Single Bed, Double Bed"
            android:textColor="@android:color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/row_booking_requests_hotel_name" />

        <TextView
            android:id="@+id/row_booking_requests_request_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:text="Request Time"
            android:textColor="@android:color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/row_booking_requests_check_in_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:text="12/12/2020"
            android:textColor="@android:color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/row_booking_requests_room_type" />

        <TextView
            android:id="@+id/row_booking_requests_check_date_seperator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:text="---"
            android:textColor="@android:color/black"
            app:layout_constraintStart_toEndOf="@+id/row_booking_requests_check_in_date"
            app:layout_constraintTop_toBottomOf="@id/row_booking_requests_room_type" />

        <TextView
            android:id="@+id/row_booking_requests_check_out_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:text="12/12/2020"
            android:textColor="@android:color/black"
            app:layout_constraintStart_toEndOf="@id/row_booking_requests_check_date_seperator"
            app:layout_constraintTop_toBottomOf="@id/row_booking_requests_room_type" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>